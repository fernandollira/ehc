<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/parameter_reader_param_icon"
            android:src="@drawable/open_close_brackets_enclosing"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="6dp"
            android:layout_gravity="bottom"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <EditText
            android:id="@+id/parameter_reader_param_value"
            android:hint="@string/parameter_reader_args_hint"
            android:inputType="text"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_medium"
            android:textColorHint="@color/colorGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/parameter_reader_file_question"
        android:layout_width="match_parent"
        android:textColor="@color/colorWhite"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="@string/service_output_format"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content" />

    <GridView
        android:id="@+id/parameter_reader_file_type"
        android:background="@color/colorPrimaryDark"
        android:numColumns="4"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/parameter_reader_node_block"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/parameter_reader_node_icon"
            android:src="@drawable/coding"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/parameter_reader_node_value"
            android:inputType="text"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorGrey"
            android:hint="@string/parameter_reader_node_field_hint"
            android:textSize="@dimen/text_medium"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>