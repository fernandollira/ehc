<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/dialog_resource_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/resource_dialog_intensity_icon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:padding="6dp"
        android:contentDescription="@string/action_settings"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/lamp_off"
        android:scaleType="centerCrop" />

    <SeekBar
        android:id="@+id/resource_dialog_intensity_value"
        android:layout_width="260dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:thumb="@drawable/thumb_image"
        android:thumbTint="@color/colorWhite"
        android:thumbTintMode="src_atop"
        android:progressBackgroundTint="@color/colorWhite"
        android:max="100"
        android:layout_height="40dp" />
</LinearLayout>